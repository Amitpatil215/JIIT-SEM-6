{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://amitpatil/spacestaion",
    "title": "Spacestaion Schema",
    "description": "Describes space station",
    "dependencies": {
        "name": [
            "population"
        ]
    },
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
        },
        "population": {
            "type": "integer",
            "description": "Current no of people in place station",
            "exclusiveMinimum": 5,
            "exclusiveMaximum": 1000
        },
        "active": {
            "type": "boolean",
            "default": true
        },
        "plants": {
            "type": "array",
            "minItems": 2,
            "maxItems": 4,
            "items": [
                {
                    "type": "object",
                    "uniqueItems": true,
                    "minProperties": 1,
                    "maxProperties": 6,
                    "properties": {
                        "plantname": {
                            "type": "string",
                            "pattern": "\\w[ ]?\\w"
                        },
                        "leaf": {
                            "type": "integer",
                            "minimum": 2,
                            "maximum": 10
                        },
                        "poisonus": {
                            "type": "boolean"
                        },
                        "category": {
                            "type": "string",
                            "enum": [
                                "a",
                                "b",
                                "c"
                            ]
                        }
                    },
                    "patternProperties": {
                        "\\d": {
                            "type": "boolean"
                        }
                    }
                }
            ],
            "additionalItems": true,
            "required": [
                "plantname",
                "leaf",
                "posonus",
                "category"
            ]
        },
        "birth": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "name",
        "population",
        "active",
        "plants"
    ],
    "additionalProperties": true
}